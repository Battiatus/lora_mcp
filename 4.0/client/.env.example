# Frontend (.env)
REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_FIREBASE_API_KEY=votre-cle-api-firebase
REACT_APP_FIREBASE_AUTH_DOMAIN=votre-projet-id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=votre-projet-id
REACT_APP_FIREBASE_STORAGE_BUCKET=votre-projet-id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=votre-id-expediteur
REACT_APP_FIREBASE_APP_ID=votre-id-app

# Backend (.env)
# Configuration générale
PORT=8080
NODE_ENV=development
LOG_LEVEL=info

# Endpoint du frontend (pour CORS)
FRONTEND_URL=http://localhost:3000

# Configuration Firebase (service account)
# Option 1: Utiliser un fichier JSON pour le compte de service
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Option 2: Utiliser une variable d'environnement pour le compte de service (en production)
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"votre-projet-id",...}

# Configuration pour Cloud Run
# API_URL=https://mcp-server-api-xxxxx-uc.a.run.app
# PRODUCTION_API_URL=https://api.mcp-server.example.com